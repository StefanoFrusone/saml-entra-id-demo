{
  "name": "saml-entra-id-demo",
  "version": "1.0.0",
  "description": "Esempio completo di autenticazione SAML con Microsoft Entra ID usando React + Node.js",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install && npm install --workspace=backend && npm install --workspace=frontend",
    "dev": "concurrently \"npm run dev --workspace=backend\" \"npm run dev --workspace=frontend\"",
    "start": "concurrently \"npm run start --workspace=backend\" \"npm run dev --workspace=frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules frontend/dist",
    "postinstall": "echo 'ðŸŽ‰ Installazione completata! Esegui npm run dev per avviare l\\'applicazione'"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "saml",
    "authentication",
    "microsoft-entra-id",
    "azure-ad",
    "react",
    "nodejs",
    "sso",
    "single-sign-on"
  ],
  "author": "stefano.frusone@gmail.com",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
